<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/accelerometer"
        style="@style/AppTheme"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Accelerometer"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/category_numbers"
         />


    <!-- Gyroscope category -->


        <TextView
            android:id="@+id/gyroscope"
            style="@style/AppTheme"
            android:text="Gyroscope"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@color/category_numbers"
            />


    <!-- Magnetometer category -->
        <TextView
            android:id="@+id/magnetometer"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="60dp"
            style="@style/AppTheme"
            android:text="Magnetometer"
            android:textAlignment="center"
            android:textSize="30dp"
            android:background="@color/category_numbers"
            />

    <!-- Ambient Light Sensor category -->

        <TextView
            android:id="@+id/lightsensor"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/AppTheme"
            android:textColorHighlight="@color/primary_dark_color"
            android:text="Ambient Light Sensor"
            android:textSize="30dp"
            android:background="@color/category_numbers"
            />
        <TextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:layout_marginTop="40dp"
            style="@style/AppTheme"
            android:textAlignment="center"
            android:text="Pressure Sensor"
            android:background="@color/category_numbers"
            />

</LinearLayout>